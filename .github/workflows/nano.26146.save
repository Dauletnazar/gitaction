name: CI

on:
  push:
    branches: ["**"]
  workflow_dispatch: {}

permissions:
  contents: write  # allow pushing the proof file back to the repo

concurrency:
  group: ci-${{ github.ref }}
  cancel-in-progress: true

jobs:
  ci:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Java
        uses: actions/setup-java@v4
        with:
          distribution: temurin
          java-version: '17'
          cache: maven

      # Install Maven if missing
      - name: Ensure Maven installed
        run: |
          if ! command -v mvn >/dev/null 2>&1; then
            sudo apt-get update
            sudo apt-get install -y maven
          fi
          mvn -v

      - name: Resolve dependencies
        run: mvn -B -ntp dependency:go-offline

      - name: Build & Test
        run: mvn -B -ntp verify

      # Debug: list produced artifacts
      - name: List built artifacts (debug)
        if: always()
        run: |
          echo "JARs:"
          find . -type f -name "*.jar" -not -name "*-sources.jar" -not -name "*-javadoc.jar" -print || true
          echo "WARs:"
          find . -type f -name "*.war" -print || true
          echo "Test reports:"
          find . -type f -path "*/target/*reports/*" -print || true

      # Upload JAR/WAR if present
      - name: Upload JAR/WAR (if exists)
        if: ${{ success() && (hashFiles('**/target/*.jar') != '' || hashFiles('**/target/*.war') != '') }}
        uses: actions/upload-artifact@v4
        with:
          name: build-artifacts
          path: |
            **/target/*.jar
            **/target/*.war
            !**/*-sources.jar
            !**/*-javadoc.jar

      # Always upload test reports (ensures an artifact is visible in run summary)
      - name: Upload test reports (always)
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-reports
          path: |
            **/target/surefire-reports/**
            **/target/failsafe-reports/**
          if-no-files-found: ignore

      # Always create and upload a tiny build proof artifact
      - name: Create build proof (always)
        if: always()
        shell: bash
        run: |
          set -e
          TS=$(date -u +%Y-%m-%dT%H:%M:%SZ)
          echo "Run #${{ github.run_number }} attempt #${{ github.run_attempt }} on ${{ github.run_id }} at ${TS}" > build-proof.txt
          ls -l build-proof.txt || true
          cat build-proof.txt || true

      - name: Upload build proof (always)
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: build-proof
          path: build-proof.txt
          if-no-files-found: warn

      # Commit a proof line back to the repo (first attempt only, not on PRs)
      - name: Commit CI proof back (pull -> commit -> push)
        if: ${{ github.event_name != 'pull_request' && github.run_attempt == 1 }}
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        shell: bash
        run: |
          set -e
          git config user.name "${{ github.actor }}"
          git config user.email "${{ github.actor }}@users.noreply.github.com"

          # Sync with remote to avoid non-fast-forward
          git fetch origin ${{ github.ref_name }}
          git checkout ${{ github.ref_name }}
          git pull --rebase origin ${{ github.ref_name }}

          mkdir -p .github
          TS=$(date -u +%Y-%m-%dT%H:%M:%SZ)
          echo "Run #${{ github.run_number }} attempt #${{ github.run_attempt }} on ${{ github.run_id }} at ${TS} by ${{ github.actor }}" >> .github/ci-proof.txt

          git add .github/ci-proof.txt
          git commit -m "ci: proof of run [skip ci]" || echo "Nothing to commit"
          git push origin HEAD:${{ github.ref_name }}
